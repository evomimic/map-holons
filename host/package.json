{
  "name": "map_sdk",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng --project-dir=UI",
    "start": "npm run clean:hc && npm run tauri:serve",
    "clean:hc": "rm -f conductora/.hc*",
    "mock": "cd ui && ng serve --configuration mock",
    "build": "cargo build --release",
    "check": "cargo check --workspace",
    "test:unit": "cargo test --workspace",
    "test:unit:no-run": "cargo test --workspace --no-run",
    "web:serve": "cd ui && ng serve",
    "web:build": "cd ui && ng build --base-href ./",
    "web:dev": "npm run web:build",
    "web:prod": "npm run web:build -- -c production",
    "tauri": "tauri",
    "tauri:serve": "tauri dev",

    "clean": "npm run clean:rust:deep && npm run clean:ui",
    "clean:rust": "cargo clean",
    "clean:rust:deep": "npx rimraf target .cargo && cargo clean",
    "clean:ui": "npx rimraf ../node_modules",

    "tauri:bundle": "tauri build"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "@ngrx/signals": "^21",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "js-base64": "^3.7.7",
    "ajv": "^8.17.1"

  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "@tauri-apps/cli": "^2"  
  }
}
